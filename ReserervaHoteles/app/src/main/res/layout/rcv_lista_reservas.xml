<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:background="@drawable/nombre_usuario"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_hotelReserva"
        android:layout_width="89dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_action_name" />

    <LinearLayout
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_nombreHotelReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Hotel"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_fechaEntrSalReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fechaEntradaSalida"
            android:textAlignment="textStart"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Estado:"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_estadoReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="estado"
                android:textAlignment="center"
                android:textAllCaps="true" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_campoDerecha"
        android:layout_width="81dp"
        android:layout_height="match_parent"
        android:includeFontPadding="false"
        android:paddingTop="25dp"
        android:text="Precio"
        android:textAlignment="textEnd"
        android:textColor="@color/X_verde_shrek"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>